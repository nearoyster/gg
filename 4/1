<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
</head>
<body>
    <script>
        var a = prompt()
        var i, j;

        for (i = a; i <= 9; i++){
            document.write("<div>");
            document.write("<h3>" + i + "단</h3>");
            for (j=1; j <=9; j++){
                document.write(i + "X" + j + "=" + i*j + "<br>");

            }
            break;
            document.write("</div>");
        }
    </script>
    
</body>
</html>

