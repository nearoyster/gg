<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        .a{
            width: 300px;
            height: 300px;
            color: red;
        }
    </style>
</head>
<body>

    <script>
        function create_color(){
            let x = prompt()
            return x;


        }
        let w = create_color();
        if (w == 1){
            document.write("<div style='width:200px; height: 200px; background-color: red'></div>");
        }
        else if(w == 2){
            document.write("<div style='width:200px; height: 200px; background-color: yellow'></div>");

        }
        else if(w == 3){
            document.write("<div style='width:200px; height: 200px; background-color: #0000ff'></div>");

        }
        else if(w == 4){
            document.write("<div style='width:200px; height: 200px; background-color: green'></div>");

        }

        else{
            alert("error")
        }
        
    </script>
    
</body>
</html>



.....................











<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        .a{
            width: 300px;
            height: 300px;
            color: red;
        }
    </style>
</head>
<body>

    <script>
        function create_color(){
            let x = prompt()
            return x;


        }
        let w = create_color();
        if (w == 1){
            document.write("<div style='width:400px; height: 20px; background-color: blue'></div>");
        }
        else if(w == 2){
            document.write("<div style='width:20px; height: 400px; background-color: red'></div>");
        }
        else{
            alert("error")
        }
        
    </script>
    
</body>
</html>
