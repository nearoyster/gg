<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <style>
        .b {
            width: 20px;
            height: 20px;
        }
    </style>
</head>
<body>

    <script>
        var i = 0;

        do{

            var a = "<div style = 'width:" + 10 * i * i  + "px;";
            var b = "background:#ff0000; position: absolute; height: "+ 10 * i * i + "px; left: "+ 2* i * i + "cm;'></div>";
            i++;
            var c = a + b;
            
            document.write(c);
            
        }while (i < 10)


    </script>
    
</body>
</html>



